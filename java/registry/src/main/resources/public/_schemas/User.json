{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "User": {
      "$ref": "#/definitions/User"
    }
  },
  "required": [
    "User"
  ],
  "title":"User",
  "definitions": {
    "User": {
      "$id": "#/properties/User",
      "type": "object",
      "title": "The User Schema",
      "required": [
        "channel",
        "email",
        "loginId",
        "status",
        "userName",
        "phone"
      ],
      "properties": {
        "id": {
          "type": "string",
          "$comment": "User ID"
        },
        "channel": {
          "type": "string",
          "$comment": "User belong to the channel"
        },
        "countryCode": {
          "type": "string",
          "$comment": "Country code of user"
        },
        "currentLoginTime": {
          "type": "string",
          "$comment": "Current login time"
        },
        "dob": {
          "type": "string",
          "$comment": "Date of birth"
        },
        "email": {
          "type": "string",
          "$comment": "Email id"
        },
        "emailVerified": {
          "type": "boolean",
          "$comment": "Email Verified"
        },
        "firstName": {
          "type": "string",
          "$comment": "First name of user"
        },
        "lastName": {
          "type": "string",
          "$comment": "Last name of user"
        },
        "gender": {
          "type": "string",
          "$comment": "Gender of user"
        },
        "isDeleted": {
          "type": "boolean",
          "$comment": "User is deleted"
        },
        "lastLoginTime": {
          "type": "string",
          "$comment": "Last login time"
        },
        "locationIds": {
          "items": {
            "type": "string"
          },
          "$comment": "Location Ids"
        },
        "phone": {
          "type": "string",
          "$comment": "Phone number"
        },
        "phoneVerified": {
          "type": "boolean",
          "$comment": "Phone Verified"
        },
        "rootOrgId": {
          "type": "string",
          "$comment": "Root organisation ID"
        },
        "status": {
          "type": "integer",
          "$comment": "Status"
        },
        "tncAcceptedOn": {
          "type": "string",
          "format": "date-time",
          "$comment": "Transaction Accepted on"
        },
        "tncAcceptedVersion": {
          "type": "string",
          "$comment": "Transaction Accepted Version"
        },
        "loginId": {
          "type": "string",
          "$comment": "Login ID"
        },
        "userName": {
          "type": "string",
          "title": "User name"
        },
        "userType": {
          "type": "string",
          "title": "User Type"
        },
        "frameWork": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "$comment": "Id of framework"
            },
            "board": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "$comment": "Board of education"
            },
            "gradeLevel": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "$comment": "Grade Level"
            },
            "medium": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "$comment": "medium"
            },
            "subject": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "$comment": "subject"
            }
          }
        }
      }
    }
  },
  "_osConfig": {
    "osComment": ["This section contains the OpenSABER specific configuration information",
      "privateFields: Optional; list of field names to be encrypted and stored in database",
      "signedFields: Optional; list of field names that must be pre-signed",
      "indexFields: Optional; list of field names used for creating index. Enclose within braces to indicate it is a composite index. In this definition, (serialNum, teacherCode) is a composite index and teacherName is a single column index.",
      "uniqueIndexFields: Optional; list of field names used for creating unique index. Field names must be different from index field name",
      "systemFields: Optional; list of fields names used for system standard information like created, updated timestamps and userid"],

    "privateFields": ["phone", "email", "loginId", "userName", "status"],
    "signedFields": [],
    "indexFields": ["email","loginId","status","userName","phone"],
    "uniqueIndexFields": ["loginId","email","phone"],
    "systemFields": ["createdAt", "updatedAt", "createdBy", "updatedBy"]
  }
}